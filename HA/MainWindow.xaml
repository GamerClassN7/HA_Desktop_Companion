<Window x:Class="HA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HA"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="210"
        Width="450"
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="27"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Height="17" Grid.Column="1" Margin="5,5,5,5" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="0"><Run Language="cs-cz" Text="Home Assistant URL"/></TextBlock>
            <TextBox x:Name="url" Height="20" Margin="5,5,5,5" TextWrapping="Wrap" Text="http://homeassistant:8123" Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Height="17" Grid.Column="1" Margin="5,5,5,5" TextWrapping="Wrap" Grid.ColumnSpan="2" Grid.Row="2"><Run Language="cs-cz" Text="API Token"/></TextBlock>
            <TextBox x:Name="token" Height="20" Margin="5,5,5,5" TextWrapping="Wrap" Text="" Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="1"/>

            <Button x:Name="save" Grid.Column="2" Content="Save" Margin="5,5,5,5" Grid.Row="4" Click="Save_Click"/>
            <Border Grid.Row="0" Grid.RowSpan="6" Grid.Column="0" Background="#FFED0A0A" Height="150" Width="150" Margin="0,0,0,0" VerticalAlignment="Top">
                <Image Margin="5,5,5,5" Source="/ha_logo.png" />
            </Border>
        </Grid>
    </Grid>
</Window>
